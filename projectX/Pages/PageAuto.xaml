<Page x:Class="projectX.Pages.PageAuto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectX.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuto">

    <StackPanel>
        <TextBlock Margin="5" FontSize="20" HorizontalAlignment="Center" >Добро пожаловать!</TextBlock>
        <TextBlock Margin="5" FontSize="20" HorizontalAlignment="Center" >Авторизация</TextBlock>
        <TextBlock Margin="5" FontSize="15" HorizontalAlignment="Center" >ЛОГИН</TextBlock>
        <TextBox Name="TxbLog" Margin="5" Width="100" Height="20"></TextBox>
        <TextBlock Margin="5" FontSize="15" HorizontalAlignment="Center" >ПАРОЛЬ</TextBlock>
        <TextBox Name="TxbPas" Margin="5" Width="100" Height="20"></TextBox>
        <Button Name="BtnLogin" Margin="5" Width="100" Height="25" FontSize="15" Click="BtnLogin_Click" >ВОЙТИ</Button>
        <Button Name="BtnReg" Margin="5" Width="150" Height="20" FontSize="12" Click="BtnReg_Click" >ЗАРЕГИСТРИРОВАТЬСЯ</Button>
    </StackPanel>
</Page>

<Page x:Class="projectX.Pages.PageReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectX.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageReg">

    <StackPanel>
        <TextBlock Margin="5" FontSize="20" HorizontalAlignment="Center" >Вы на странице регистрации.</TextBlock>
        <TextBlock Margin="5" FontSize="20" HorizontalAlignment="Center" >Введите данные</TextBlock>
        <TextBlock Margin="5" FontSize="15" HorizontalAlignment="Center" >Ваш будущий ЛОГИН</TextBlock>
        <TextBox Name="TxbLog" Margin="5" Width="100" Height="20"></TextBox>
        <TextBlock Margin="5" FontSize="15" HorizontalAlignment="Center" >Ваш будущий ПАРОЛЬ</TextBlock>
        <TextBox Name="TxbPas" Margin="5" Width="100" Height="20"></TextBox>
        <TextBlock Margin="5" FontSize="15" HorizontalAlignment="Center" >Повторите ПАРОЛЬ</TextBlock>
        <PasswordBox Name="PsbPas" Width="100" Height="20" ></PasswordBox>
        <Button Name="BtnReg" Margin="5" Width="150" Height="20" FontSize="12" Click="BtnReg_Click" >ЗАРЕГИСТРИРОВАТЬСЯ</Button>
    </StackPanel>
</Page>
